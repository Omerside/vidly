@model Vidly.ViewModels.CustomerViewModel
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

<h2>Customers</h2>
<table class=“table table-bordered table-hover”>
    <tr>
        <th>Customers</th>
    </tr>

    @foreach (var customer in Model.Customers)
    {
        <tr>
            <td>@customer.Name</td>
        </tr>
     }
        
</table>






